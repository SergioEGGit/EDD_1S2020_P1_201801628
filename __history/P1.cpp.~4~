#pragma hdrstop
#pragma argsused

#ifdef _WIN32
#include <tchar.h>
#else
  typedef char _TCHAR;
  #define _tmain main
#endif

//---------------------------------Librerias------------------------------------
   #include <iostream>
   #include <stdio.h>
   #include <conio.h>
   #include <string>
   #include <windows.h>
   using namespace std;

//----------------------------------Variables-----------------------------------

  #define ArribaIzquierda 201
  #define arrder 187
  #define abajizq 200
  #define abajder 188
  #define vert 186
  #define horiz 205
  #define PR(x) cprintf ("%c",x)

//------------------------------------Métodos-----------------------------------

	 //--------------------------------Marco-------------------------------

		  void marco (int a, int b, int c, int d)
		  {

			 int i;
			 window(1,1,80,25);
			 gotoxy(a-1,b-1);

			 PR (ArribaIzquierda);

			 for(i = a; i <= c; i++)
			 {
				PR(horiz);
			 }

			 PR(arrder);

			 for(i = b; i <= d; i++)
			 {
				gotoxy (c+1,i);
				PR(vert);
			 }

			 gotoxy (a-1,d+1);

			 PR(abajizq);

			 for (i = a; i <= c; i++)
			 {
				PR(horiz);
			 }

			 PR(abajder);

			 for (i=b; i <= d; i++)
			 {
				gotoxy (a-1,i);
				PR(vert);
			 }

			 window (a,b,c,d);

		   }

	 //-----------------------------Fullscreen-----------------------------

		void Fullscreen()
		{
		   keybd_event(VK_MENU,
						  0x38,
							 0,
							 0);
		   keybd_event(VK_RETURN,
							0x1c,
							   0,
							   0);
		   keybd_event(VK_RETURN,
							0x1c,
				 KEYEVENTF_KEYUP,
							   0);
		   keybd_event(VK_MENU,
						  0x38,
			   KEYEVENTF_KEYUP,
							 0);
		   return;
		}


//--------------------------------------Main------------------------------------
	 int _tmain(int argc, _TCHAR* argv[])
	 {
		//window(1,1,1,1);
		/*for(int i = 1; i <= 120; i++)
		{
			cout<< "*";
		}*/

		//clrscr();
		marco(2,2,119,26);
		//system("mode con: cols=500 lines=50");
		string hola;
		cin>> hola;

		system("pause");
		return 0;
	 }





