//---------------------------------Librerias---------------------------------
   #include <iostream>
   #include <stdio.h>
   #include <conio.h>
   #include <string>
   #include <cstdlib>
   #include <windows.h>
   #include "ListaDobleCaracteres.h"
   using namespace std;

//---------------------------------------------------------------------------
   #pragma package(smart_init)

//---------------------------------Métodos-----------------------------------

   void InsertarLDInicio(ListaLD &Cabeza, ListaLD &Cola, string Caracter)
   {
	  ListaLD aux = new(struct CaracteresLD);
	  aux -> Caracter = Caracter;
	  aux -> sgte = NULL;
	  aux -> ante = NULL;

	  if(Cabeza != NULL)
	  {
		 aux -> sgte = Cabeza;
		 aux -> sgte -> ante = aux;
	  }

	  if(Cola == NULL)
	  {
		 Cola = aux;
         Cabeza = aux;
      }
   }

   void MostrarLD(ListaLD &Cabeza)
   {
	  while(Cabeza != NULL)
	  {
		 cout<< Cabeza -> Caracter;
		 Cabeza = Cabeza -> sgte;
	  }
   }






