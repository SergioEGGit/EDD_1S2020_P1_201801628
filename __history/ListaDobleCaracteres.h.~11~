  #ifndef ListaDobleCaracteresH
  #define ListaDobleCaracteresH
  #include <string>
  using namespace std;

//-------------------------------Estructura-------------------------------------

	struct CaracteresLD
	{
	   int Id;
	   int Fila;
	   int Columna;
	   string Caracter;
	   struct CaracteresLD *sgte;
	   struct CaracteresLD *ante;
	}*primeros, *ultimos;

	typedef struct CaracteresLD *ListaDobleCaracteres;

	void InsertarLD(ListaDobleCaracteres &listaLD, int Id, int Fila, int Columna, string Caracter);

	void ImprimirLD(ListaDobleCaracteres listaDC);

	void mensaje(int id);

//------------------------------------------------------------------------------
#endif

